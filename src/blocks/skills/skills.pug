include ../header/header

mixin skills (skills)
  +header("skills")  

  .skills
    each item in skills
      .skills__block
        h3.skills__name= item.name
        ul.skills__line
          - for (let i = 0; i < item.maxValue; i += 1) {
            -if (i < item.value){
              li.skills__level.skills__level_developed
            -} else {
              li.skills__level.skills__level_undeveloped
            -};
          -};